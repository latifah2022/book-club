<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Have a book recommendation? Add it to the list!</h3>

    <form class="form new-book-form">
      <div class="form-group">
        <label for="book-name">Book Title:</label>
        <input class="form-input" type="text" id="book-name" name="book-name" />
      </div>
      <div class="form-group">
        <label for="book-reviews">Author:</label>
        <input class="form-input" type="text" id="book-author" name="book-author" />
      </div>
      <div class="form-group">
        <label for="book-desc">Description:</label>
        <textarea class="form-input" id="book-desc" name="book-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Add it to the list!</button>
      </div>
    </form>
  </div>

{{!-- MY RECOMMENDATIONS --}}
  {{#if books.length}}
  <div class="col-md-6 book-list">
    <h3>My Recommendations:</h3>

    {{#each books as |book|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/book/{{book.id}}">{{book.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{book.id}}">Delete Recommendation</button> 
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

{{!-- MY REVIEWS --}}
  {{#if book.length}}
  <div class="col-md-6 book-list">
    <h3>My Reviews:</h3>

    {{#each reviews as |review|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/book/{{review.id}}">{{userReview}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{review.id}}">Delete Review</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>


<script src="/js/profile.js"></script>
