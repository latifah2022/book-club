<div class="text-center">
  <h2>{{name}}</h2>
  {{!-- <P>{{PHOTO}}</P> IF WE HAVE TIME, WE CAN GET TO THIS --}}
  <p>{{description}}</p>

  <p>
    <h3>Reviews:</h3>
    {{#each reviews as |review|}}
    <span class="reviews">{{review.userReview}}</span>
    <p> - {{review.user.name}} on {{format_date review.date_created}}</p>
    {{/each}}
  </p>

  <form class="form review-form">
    <div class="form-group">
      <label for="review">Add your review:</label>
      <textarea class="form-input" id="book-review" name="review"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Create</button>
    </div>
  </form>

</div>
<script src="/js/books.js"></script>