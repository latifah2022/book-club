<!-- Loop over each object in the projects array -->
{{#each book as |book| }}
<div class="row mb-4 book">
  <div class="col-md-5">
    <h2>
      <a href="/book/{{book.id}}">{{book.name}}</a>
    </h2>

    <p>
      <!-- Pass needed_funding value to the helper function -->
      <span class="review">{{book.needed_reviews}}</span>
    </p>

    <p>Reviewed by {{book.user.name}} on {{format_date review.date_created}}</p>
  </div>
  
  <div class="col-md-7">
    <p>
      {{book.description}}
    </p>
  </div>
</div>
{{/each}}
