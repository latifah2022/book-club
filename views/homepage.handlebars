<!-- Loop over each object in the projects array -->
{{#each book as |book| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/project/{{book.id}}">{{book.name}}</a>
    </h2>
    <p>
      <span for="img" aria-label="money">📝 </span>
      <!-- Pass needed_funding value to the helper function -->
      <span class="dollar-amount">{{format_amount book.needed_reviews}}</span>
      needed!
    </p>
    <p>Created by {{book.user.name}} on {{format_date book.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{book.description}}
    </p>
  </div>
</div>
{{/each}}
